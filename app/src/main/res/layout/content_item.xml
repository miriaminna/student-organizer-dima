<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        style="@style/ListItem.FirstLine"
        android:id="@+id/content_text"
        android:text="Content text"
        android:layout_margin="@dimen/margin_med"
        android:layout_alignParentTop="true"/>

    <TextView
        style="@style/ListItem.SecondLine"
        android:id="@+id/content_type"
        android:textColor="@color/grey"
        android:text="Content type"
        android:layout_marginStart="@dimen/margin_med"
        android:layout_below="@id/content_text"/>

    <ImageButton
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/delete_black"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/margin_med"/>

</RelativeLayout>